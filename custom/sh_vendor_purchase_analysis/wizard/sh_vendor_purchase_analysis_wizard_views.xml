<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sh_vendor_purchase_analysis_wizard" model="ir.ui.view">
		<field name="name">sh.purchase.analysis.wizard</field>
		<field name="model">sh.purchase.analysis.wizard</field>
		<field name="arch" type="xml">
			<form string="Vendor Purchase Analysis">
				<group>
					<group>
						<field name="sh_start_date" />
						<field name="sh_status" widget="radio" />
						<field name="sh_partner_ids" widget="many2many_tags" />
						<field name="company_ids" widget="many2many_tags"
							options="{'no_create': True}" groups="base.group_multi_company" />
					</group>
					<group>
						<field name="sh_end_date" />
						<field name="report_by" widget="radio" />
						<field name="sh_product_ids" widget="many2many_tags"
							attrs="{'invisible':[('report_by','=','order')]}" />
					</group>
				</group>
				<footer>
					<button name="display_report" string="View" class="oe_highlight" type="object" />
					or <button name="print_report" string="Print" class="oe_highlight" type="object"
						icon="fa-print" /> or <button name="print_xls_report" string="Print In XLS"
						class="oe_highlight" type="object" icon="fa-file-excel-o" /> or <button
						string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_vendor_purchase_analysis" model="ir.actions.act_window">
		<field name="name">Vendor Purchase Analysis</field>
		<field name="res_model">sh.purchase.analysis.wizard</field>
		<field name="view_id" ref="sh_vendor_purchase_analysis_wizard" />
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem id="menu_vendor_purchase_analysis" name="Vendor Purchase Analysis"
		parent="purchase.purchase_report_main" action="action_vendor_purchase_analysis"
		sequence="100" groups="purchase.group_purchase_manager" />

</odoo>