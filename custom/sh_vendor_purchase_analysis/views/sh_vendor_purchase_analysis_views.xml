<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_vendor_purchase_analysis_view_tree" model="ir.ui.view">
        <field name="name">sh.vendor.purchase.analysis.order.view.tree</field>
        <field name="model">sh.vendor.purchase.analysis.order</field>
        <field name="arch" type="xml">
            <tree edit="0">
                <field name="name" />
                <field name="date_order" optional="show" />
                <field name="user_id" options="{'no_open': True, 'no_create': True}" optional="show" />
                <field name="sh_partner_id" options="{'no_open': True, 'no_create': True}" optional="show" />
                <field name="purchase_amount" sum="Total Purchase Amount" optional="show" />
                <field name="currency_id" invisible="1" />
                <field name="amount_paid" sum="Total Amount Paid" optional="show" />
                <field name="balance" sum="Total Balance" optional="show" />
            </tree>
        </field>
    </record>

    <record id="sh_vendor_purchase_analysis_product_view_tree" model="ir.ui.view">
        <field name="name">sh.vendor.purchase.analysis.product.view.tree</field>
        <field name="model">sh.vendor.purchase.analysis.product</field>
        <field name="arch" type="xml">
            <tree edit="0">
                <field name="name" />
                <field name="date_order" optional="show" />
                <field name="sh_partner_id" options="{'no_open': True, 'no_create': True}" optional="show" />
                <field name="sh_product_id" options="{'no_open': True, 'no_create': True}" optional="show" />
                <field name="price" optional="show" />
                <field name="quantity" optional="show" />
                <field name="currency_id" invisible="1" />
                <field name="tax" sum="Total Tax" optional="show" />
                <field name="subtotal" sum="Total Subtotal" optional="show" />
            </tree>
        </field>
    </record>

    <record id="sh_vendor_purchase_analysis_order_view_search" model="ir.ui.view">
        <field name="name">sh.vendor.purchase.analysis.order.view.search</field>
        <field name="model">sh.vendor.purchase.analysis.order</field>
        <field name="arch" type="xml">
            <search string="Vendor Purchase Analysis">
                <field name="name" />
                <field name="date_order" />
                <field name="user_id" />
                <field name="sh_partner_id" />
                <field name="purchase_amount" />
                <field name="amount_paid" />
                <field name="balance" />
                <filter string="Order Date" name="group_order_date" domain="[]" context="{'group_by': 'date_order'}" />
                <filter string="Purchase Representative" name="group_purchase_representative" domain="[]" context="{'group_by': 'user_id'}" />
                <filter string="Vendor" name="group_vendor" domain="[]" context="{'group_by': 'sh_partner_id'}" />
            </search>
        </field>
    </record>

    <record id="sh_vendor_purchase_analysis_product_view_search" model="ir.ui.view">
        <field name="name">sh.vendor.purchase.analysis.product.view.search</field>
        <field name="model">sh.vendor.purchase.analysis.product</field>
        <field name="arch" type="xml">
            <search string="Vendor Purchase Analysis">
                <field name="name" />
                <field name="date_order" />
                <field name="sh_partner_id" />
                <field name="sh_product_id" />
                <field name="price" />
                <field name="quantity" />
                <field name="tax" />
                <field name="subtotal" />
                <filter string="Date" name="group_date" domain="[]" context="{'group_by': 'date_order'}" />
                <filter string="Product" name="group_product" domain="[]" context="{'group_by': 'sh_product_id'}" />
                <filter string="Vendor" name="group_vendor" domain="[]" context="{'group_by': 'sh_partner_id'}" />
            </search>
        </field>
    </record>

    <record id="sh_vendor_purchase_analysis_order_action" model="ir.actions.act_window">
        <field name="name">Vendor Purchase Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.vendor.purchase.analysis.order</field>
        <field name="context">{'search_default_group_vendor': 1}</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="sh_vendor_purchase_analysis_product_action" model="ir.actions.act_window">
        <field name="name">Vendor Purchase Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.vendor.purchase.analysis.product</field>
        <field name="context">{'search_default_group_product': 1}</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>