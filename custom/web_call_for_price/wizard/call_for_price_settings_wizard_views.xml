<odoo>
	<data>
		<record id="call_for_price_settings_wizard" model="ir.ui.view">
			<field name="name">Call for Price Settings Wizard</field>
			<field name="model">call.for.price.settings.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Call for Price Update">
					<group>
						<field name="call_for_price_settings"/>
					</group>
					<footer>
						<button name="update_call_for_price" string="Update" type="object" class="btn-primary"/>
						or
						<button string="Cancel" class="btn-default" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="action_call_for_price_settings_wizard" model="ir.actions.act_window">
			<field name="name">Call for Price Update</field>
			<field name="res_model">call.for.price.settings.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="view_id" ref="web_call_for_price.call_for_price_settings_wizard"/>
			<field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
			<field name="binding_model_id" ref="product.model_product_template" />
			<field name="binding_view_types">form,list</field>
		</record>
	</data>
</odoo>