<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <template id="sh_backmate_theme_website_login_layout" inherit_id="website.login_layout" name="Backmate Login Layout">
	
		<xpath expr="//div[hasclass('oe_website_login_container')]" position="replace">
            <t t-set="theme_config" t-value="request.env['sh.back.theme.config.settings'].search([('id','=',1)],limit = 1)" />	
            <t t-if="theme_config.login_page_style == 'style_1'">
            	<div class="container py-5">
	                <div t-attf-class="card border-0 mx-auto bg-100 {{login_card_classes}} o_database_list" style="max-width: 300px;">
	                    <div class="card-body">
							<t t-if="theme_config.login_page_style_comp_logo">
								<div class="sh_logo d-flex justify-content-center">
									<!--<img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}"
										 alt="Logo" style="max-height: 80px; max-width: 100%; width:auto"/> -->
									<img alt="Ciphlex" src="/web/static/img/res_company_logo.png"
										 style="max-height: 80px; max-width: 60%; width:auto"/>
								</div>
							</t>
							<t t-else="">

								<h2><center><span  class="company_name_style_1" >Welcome To <t t-esc="request.env.company.name"/> !</span></center></h2> 
							</t>
	                       
	                        <t t-raw="0"/>
	                        <div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
	                            <t t-if="not disable_database_manager">
	                                <a class="pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
	                            </t>
	                            <a href="https://www.ciphlex.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by <span>Ciphlex Inc.</span></a>
	                        </div>
	                    </div>
	                </div>
	            </div>
            </t>
            <t t-if="theme_config.login_page_style == 'style_2'">
            	<div class="container-fluid mb-5 pb-5">
            
            		
	            	<div class="row">
	            	<div t-attf-class="border-0 mx-auto mt-5 bg-100 {{login_card_classes}} o_database_list col-lg-4 col-md-6 col-sm-6 col-12" style="max-width: 300px;">
	                    
	                    
	                    <div class="row">
	                    	<div class="col-12">
		                        <div t-attf-class="text-center pb-3 border-bottom {{'mb-3' if form_small else 'mb-4'}}">
		                            <!--<img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}"
										  alt="Logo" style="max-height:80px; max-width: 100%; width:auto"/> -->
									<img alt="Ciphlex" src="/web/static/img/res_company_logo.png"
										 style="max-height: 80px; max-width: 60%; width:auto"/>
		                        </div>
		                        <t t-raw="0"/>
		                        <div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
		                            <t t-if="not disable_database_manager">
		                                <a class="border-right pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
		                            </t>
		                            <a href="https://www.ciphlex.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by <span>Ciphlex Inc.</span></a>
		                        </div>
		                     </div>
	                    </div>
	                </div>
	            	<div class="sh_backmate_th_login_left_img_st_2 col-lg-8 col-md-6 col-sm-6 col-12">

					</div>
	                
	            </div>
	           </div>
            </t>
            <t t-if="theme_config.login_page_style == 'style_3'">
            	 <div class="container-fluid mb-5 pb-5">
            
            		
	            	<div class="row sh_backmate_th_login_left_img_st_2">

		            	<div class="col-lg-6 col-md-12 col-sm-12 col-12 sh_logo_icon_img">
							<div t-attf-class="text-center pb-3 {{'mb-3' if form_small else 'mb-4'}}">
	                             <img t-attf-src="/web/image?model=sh.back.theme.config.settings&amp;id=1&amp;field=login_page_icon_img" alt="icon_img" style="max-height:80px; max-width: 100%; width:auto"/>
						
	                        </div>
	                        <div t-attf-class="text-center pb-3 {{'mb-3' if form_small else 'mb-4'}}">
		                     <img t-attf-src="/web/image?model=sh.back.theme.config.settings&amp;id=1&amp;field=login_page_icon_img_long" alt="Logo" style="max-height:80px; max-width: 100%; width:auto"/>
							</div>	
						</div>
		                <div t-attf-class="card border-0 mx-auto mt-5 bg-100 {{login_card_classes}} o_database_list col-lg-6 col-md-6 col-sm-6 col-12" style="max-width: 300px;">
		                    
		                    
		                    <div class="card-body">
		                        <!--  -->
		                        <h1><center><span class="sign_in">Sign In</span></center></h1>
		                        <t t-raw="0"/>
								<div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
		                            <t t-if="not disable_database_manager">
		                                <a class="border-right pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
		                            </t>
		                            <a href="https://www.ciphlex.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by <span>Ciphlex Inc.</span></a>
		                        </div>
		                    </div>
		                </div>
		             </div>
            </div>	            
            </t>
             <t t-if="theme_config.login_page_style == 'style_4'">
            	<div class="container-fluid py-5 sh_backmate_th_login_left_img_st_2">
            		<div class="row ">
		                <div t-attf-class="card border-0 mx-auto bg-100 {{login_card_classes}} o_database_list" style="max-width: 300px;">
		                     <h2><center><span  class="company_name_style_1" >Log into your Account</span></center></h2> 
	                        <div t-attf-class="text-center pb-3 border-bottom {{'mb-3' if form_small else 'mb-4'}}">
	                            <img t-attf-src="/web/image?model=sh.back.theme.config.settings&amp;id=1&amp;field=login_page_icon_img" alt="Logo" style="max-height:80px; max-width: 100%; width:auto"/>
	                        </div>
		                    <div class="card-body">
		                       
		                        <t t-raw="0"/>
		                        
		                    </div>
		                    <div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
		                            <t t-if="not disable_database_manager">
		                                <a class="pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
		                            </t>
		                            <a href="https://www.ciphlex.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by <span>Ciphlex Inc.</span></a>
		                        </div>
		                </div>
		              </div>
	            </div>
            </t> 
			<t t-if="theme_config.login_page_style == 'style_0'">
				<div class="container py-5">
					<div t-attf-class="card border-0 mx-auto bg-100 {{login_card_classes}} o_database_list" style="max-width: 300px;">
						<div class="card-body">
							<div t-attf-class="text-center pb-3 border-bottom {{'mb-3' if form_small else 'mb-4'}}">
								<!--<img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}"
									 alt="Logo" style="max-height: 80px; max-width: 100%; width:auto"/>-->
								<img alt="Ciphlex" src="/web/static/img/res_company_logo.png"
									 style="max-height: 80px; max-width: 60%; width:auto"/>
							</div>
							<t t-raw="0"/>
							<div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
								<t t-if="not disable_database_manager">
									<a class="border-right pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
								</t>
								<a href="https://www.ciphlex.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by <span>Ciphlex Inc.</span></a>
							</div>
						</div>
					</div>
				</div>
			</t>
		</xpath>
	</template>
</odoo>